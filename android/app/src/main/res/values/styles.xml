<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Dark theme matching game background -->
        <item name="colorPrimary">#0a0a0f</item>
        <item name="colorPrimaryDark">#0a0a0f</item>
        <item name="colorAccent">#00ffff</item>
        <item name="android:windowBackground">#0a0a0f</item>
        <item name="android:navigationBarColor">#0a0a0f</item>
        <item name="android:statusBarColor">#0a0a0f</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">#0a0a0f</item>
    </style>


    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="android:background">@drawable/splash</item>
    </style>
</resources>